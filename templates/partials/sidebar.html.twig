{# Start of sticky sidebar #}
<div class="sticky-top sticky-top-offset">

	{# Featured posts #}
	{% if show_featured %}
		{% include 'partials/sidebar/featured.html.twig' 
		with { 'block_title': 'MUNDANA.SIDEBAR.FEATURED'|t } %}
	{% endif %}

	{# Taxonomy list (if taxonomylist plugin is enabled) #}
	{% if showTaxonomyList %}
		{% include 'partials/sidebar/taxonomylist.html.twig' 
		with {'base_url':new_base_url, 'taxonomy':'tag', 'block_title': 'MUNDANA.SIDEBAR.TAXONOMYLIST'|t} %}
	{% endif %}

	{# Related pages (if relatedpages plugin is enabled) #}
	{% if showRelatedPages %}
		{% include 'partials/sidebar/relatedpages.html.twig'
		with { 'base_url':new_base_url, 'block_title': 'MUNDANA.SIDEBAR.RELATEDPAGES'|t } %}
	{% endif %}

	{# Random page (if random plugin is enabled) #}
	{% if random %}
		{% include 'partials/sidebar/random.html.twig'
		with { 'block_title': 'MUNDANA.SIDEBAR.RANDOM_ARTICLE.LABEL'|t } %}
	{% endif %}

	{# Archived posts (if archives plugin is enabled) #}
	{% if archives %}
		{% include 'partials/sidebar/archives.html.twig'
		with { 'base_url':new_base_url,'block_title': 'MUNDANA.SIDEBAR.ARCHIVES'|t } %}
	{% endif %}

	{# Grav Syndication (if feed plugin is enabled) #}
	{% if feeds %}
		{% include 'partials/sidebar/feeds.html.twig'
		with { 'feed_url': feed_url,'block_title': 'MUNDANA.SIDEBAR.FEEDS'|t } %}
	{% endif %}

	{# Blog Categories block #}
	{% if show_categories %}
		{% include 'partials/sidebar/categories.html.twig'
		with { 'blog': blog, 'block_title': 'MUNDANA.SIDEBAR.CATEGORIES'|t } %}
	{% endif %}
</div>
<!-- End of sticky sidebar --> 