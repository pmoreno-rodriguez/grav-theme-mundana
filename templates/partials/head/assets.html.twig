{% set compress = theme_var('production-mode') ? '.min.css' : '.css' %}

{% block stylesheets %}	
    {# Bootstrap 4.6.2 #}
    {% do assets.addCss('theme://assets/css/bootstrap'~compress,12, {rel: 'stylesheet'}) %} 
    {# Theme Stylesheet #}
    {% do assets.addCss('theme://assets/css/theme'~compress,11, {rel: 'stylesheet'}) %}
    {# Font Awesome Icons #}
    {% if theme_var('font_awesome_local') %}
        {% do assets.addCSS('theme://assets/css/fontawesome-all.min.css', {rel: 'stylesheet'}) %}
    {% else %}
        {% do assets.addCSS('https://use.fontawesome.com/releases/v5.15.4/css/all.css', {rel: 'stylesheet'}) %}
    {% endif %}    
    {# Google Fonts #}
    {% if theme_var('google_fonts_local') %}
        {% do assets.addCSS('theme://assets/css/google-fonts-local.css', {rel: 'stylesheet'}) %}
    {% else %}
        {% do assets.addCSS('https://fonts.googleapis.com/css?family=Lora:400,400i,700&display=swap', {rel: 'stylesheet'}) %}
    {% endif %}
    {% set styles %}
        {# CSS styles to change hover color on links dynamically #}
        a.text-dark:hover {
            color: {{ hover_color_mapping[color_style] }} !important;
        }
        {# Custom styles for navbar #}
        .navbarCustomStyles {
			{{ navbarCustomBgcolor ? 'background: ' ~ navbarCustomBgcolor ~ ';' : '' }}
			{{ navbarHeight ? 'min-height: ' ~ navbarHeight ~ 'px;' : '' }}
		}
		.w_logo {
			{{ widthLogo ? 'width: ' ~ widthLogo ~ 'px;' : '' }}
		}
		@media (max-width: 768px) {
			.navbarCustomStyles {
			{{ navbarHeight ? 'min-height: auto;' : '' }}
			}
		}
		@media (max-width: 480px) {
			.w_logo {
				{{ widthLogo ? 'width: ' ~ ( widthLogo * 0.60) ~ 'px;' : '' }}
			}
		}
    {% endset %}
    {% do assets.addInlineCss(styles, 1) %}
{% endblock %}

{% block javascripts %}
    {% do assets.addJs('jquery', 101) %}
    {% do assets.addJs('theme://assets/js/theme.js', {group:'bottom'}) %}     
    {# Bootstrap 4.6.2 #}
    {% if theme_var('bootstrap_local') %}
        {% do assets.addJs('theme://assets/js/popper.min.js', {group:'bottom'}) %}
        {% do assets.addJs('theme://assets/js/bootstrap.min.js', {group:'bottom'}) %}
    {% else %}
        {% do assets.addJs('https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js', {group:'bottom', integrity:'sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN', crossorigin: 'anonymous'}) %}
        {% do assets.addJs('https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js', {group:'bottom', integrity:'sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+', crossorigin: 'anonymous'}) %}
    {% endif %}
{% endblock %}
    
{% block assets deferred %}
    {{ assets.css()|raw }}
    {{ assets.js()|raw }}
{% endblock %}
