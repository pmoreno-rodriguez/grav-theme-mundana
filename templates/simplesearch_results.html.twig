{% extends 'partials/simplesearch_base.html.twig' %}

{% block content %}
<div class="row justify-content-center">
    <div id="search_results" class="col-md-8 col-12">
        <div class="content-padding simplesearch">
        <h2 class="search-header mb-5">{{ "PLUGIN_SIMPLESEARCH.SEARCH_RESULTS"|t }}</h2>
        <div class="center">
            {% include 'partials/simplesearch_searchbox.html.twig' %}
        </div>
        <p class="mt-5">
            {% if query %}
                {% set count = search_results ? search_results.count : 0 %}
                {% if count is same as( 1 ) %}
                    {{ "PLUGIN_SIMPLESEARCH.SEARCH_RESULTS_SUMMARY_SINGULAR"|t(query|e)|raw }}
                {% else %}
                    {{ "PLUGIN_SIMPLESEARCH.SEARCH_RESULTS_SUMMARY_PLURAL"|t(query|e, count)|raw }}
                {% endif %}
            {% endif %}
        </p>
        {% for page in search_results %}
            {% include 'partials/simplesearch_item.html.twig' with {'page': page, page_title: page.title } %}
        {% endfor %}
    </div>
    </div>
    <div id="sidebar" class="col-md-4 col-12">
        {% block sidebar %}
            {% include 'partials/sidebar.html.twig' %}
        {% endblock %}
    </div>
</div>
{% endblock %}
